<?xml version="1.0" encoding="UTF-8"?>
<!--
    The properties in this file setup a casual mini game of pathX.
-->
<properties>
    <property_list>
        <!-- ALL THE IMAGES TO BE USED IN THE GAME -->
        <property name="IMAGE_BACKGROUND_GAME"              value="./pathX/BackgroundGame.png"></property>
        <property name="IMAGE_BACKGROUND_MENU"              value="./pathX/BackgroundMenu.png"></property>
        <property name="IMAGE_BACKGROUND_SETTINGS"          value="./pathX/BackgroundSettings.png"></property>
        <property name="IMAGE_BACKGROUND_HELP"              value="./pathX/BackgroundHelp.png"></property>
        <property name="IMAGE_BACKGROUND_LEVEL_SELECT"      value="./pathX/BackgroundLevelSelect.png"></property>
        <property name="IMAGE_MAP_USA"                      value="./pathX/MapUSA.png"></property>
        <property name="IMAGE_BUTTON_HOME"                  value="./pathX/ButtonHome.png"></property>
        <property name="IMAGE_BUTTON_HOME_MOUSE_OVER"       value="./pathX/ButtonHomeMouseOver.png"></property>
        <property name="IMAGE_BUTTON_EXIT"                  value="./pathX/ButtonExit.png"></property>
        <property name="IMAGE_BUTTON_EXIT_MOUSE_OVER"       value="./pathX/ButtonExitMouseOver.png"></property>
        <property name="IMAGE_BUTTON_START"                 value="./pathX/ButtonStart.png"></property>
        <property name="IMAGE_BUTTON_START_MOUSE_OVER"      value="./pathX/ButtonStartMouseOver.png"></property>
    </property_list>
    
    <!-- PLAYABLE LEVELS CREATED WITH THE LEVEL EDITOR -->
    <property_options_list>
        <property_options name="SPECIALS_BUTTON_OPTION">
            
        </property_options>
        <property_options name="MENU_BUTTON_OPTIONS">
            <option>./pathX/ButtonPlayGame.png</option>
            <option>./pathX/ButtonResetGame.png</option>
            <option>./pathX/ButtonSettings.png</option>
            <option>./pathX/ButtonHelp.png</option>
        </property_options>
        <property_options name="LEVEL_OPTIONS">
            
        </property_options>
        <property_options name="LEVEL_IMAGE_OPTIONS">
            
        </property_options>
        <property_options name="MENU_MOUSE_OVER_OPTIONS">
            <option>./pathX/ButtonPlayGameMouseOver.png</option>
            <option>./pathX/ButtonResetGameMouseOver.png</option>
            <option>./pathX/ButtonSettingsMouseOver.png</option>
            <option>./pathX/ButtonHelpMouseOver.png</option>
        </property_options>
    </property_options_list>
</properties>